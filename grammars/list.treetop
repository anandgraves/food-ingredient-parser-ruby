grammar List
  include Common
  include Ingredient

  rule list
    contains:(ingredient ( ws* '|' ws* ingredient )+ ) <ListNode> /
    contains:(ingredient ( ws* ';' ws* ingredient )+ ) <ListNode> /
    contains:(ingredient ( ws* ',' ws* ingredient )+ ) <ListNode> /
    contains:(ingredient ( ws* '.' ws* ingredient )+ ) <ListNode> /
    contains:(ingredient)                              <ListNode>
  end
end
