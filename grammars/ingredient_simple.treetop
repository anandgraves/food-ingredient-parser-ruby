grammar IngredientSimple
  include Common
  include Amount

  rule ingredient_simple
    name:( word ( ws+ !amount word )* ) <IngredientNode>
  end

  rule ingredient_simple_with_amount
    amount:amount ws+ name:ingredient_simple       <IngredientNode> /
    name:ingredient_simple ws+ amount:amount       <IngredientNode> /
    name:ingredient_simple                         <IngredientNode>
  end

end
